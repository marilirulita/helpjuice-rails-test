<p style="color: green"><%= notice %></p>

<h1>Searches</h1>

<%= render "form", search: @search %>

<div id="searches">
  <% @searches.each do |search| %>
    <%= render search %>
    <p>
      <%= button_to "Delete", user_search_path(@user.id, search.id), method: :delete %>
    </p>
  <% end %>
</div>

<%= link_to "New search", new_user_search_path %>
