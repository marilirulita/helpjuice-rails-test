<p style="color: green"><%= notice %></p>

<h1>Username</h1>

<%= form_tag "/users", method: "GET" do %>
  <%= search_field_tag :username, params[:username]%>
  <%= submit_tag "Search" %>
<% end %>

<div id="users">
  <% @users.each do |user| %>
  <%= render user %>
    
    <p>
      <%= button_to "delete", user, method: :delete %>
    </p>
  <% end %>
</div>

<%= link_to "New user", new_user_path %>
